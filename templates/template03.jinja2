<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- Optional: Josefin Sans Font -->
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@300;400;500;600;700&display=swap">
  <title>{{ user.name }} - {{ user.title }} Resume</title>

  <style>
    /* ------------ Global Reset & Box Sizing ------------ */
    html {
      box-sizing: border-box;
    }
    *, *::before, *::after {
      box-sizing: inherit;
      margin: 0;
      padding: 0;
    }

    body, html {
      font-family: 'Josefin Sans', sans-serif;
      font-size: 13px;
      line-height: 1.5;
      color: #212121;
      -webkit-font-smoothing: antialiased;
    }

    /* ------------ Page Setup for WeasyPrint (A4) ------------ */
    @page {
      size: 210mm 270mm;
      margin: 20mm;
    }

    /* ------------ Resume Container ------------ */
    .resume {
      width: 210mm;         /* A4 width in mm */
      margin: 0 auto;
      padding: 20mm;        /* Interior padding */
      box-sizing: border-box;
    }

    /* ------------ Header with Photo & Contact Info ------------ */
    .header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 10px;
    }
    .header-left {
      display: flex;
      align-items: center;
    }
    .photo-container {
      width: 80px;
      height: 80px;
      border-radius: 50%;
      overflow: hidden;
      margin-right: 15px;
      flex-shrink: 0;
    }
    .photo-container img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }
    .name-title {
      display: flex;
      flex-direction: column;
    }
    .name {
      font-size: 22px;
      font-weight: 700;
      margin-bottom: 4px;
      color: #333;
    }
    .title {
      font-size: 12px;
      font-weight: 500;
      color: #999;
      text-transform: uppercase;
    }

    .header-right {
      text-align: right;
      font-size: 13px;
      color: #555;
      line-height: 1.6;
    }
    .contact-item {
      margin-bottom: 5px;
    }

    /* ------------ Divider ------------ */
    .divider {
      width: 100%;
      height: 1px;
      background-color: #eee;
      margin: 20px 0;
      border: none;
    }

    /* ------------ Content: Two Columns ------------ */
    .content-wrapper {
      display: flex;
      justify-content: space-between;
      gap: 20px;
    }
    .left-column {
      width: 48%;
      border-right: 1px solid #ccc;
      padding-right: 10px;
    }
    .right-column {
      width: 48%;
      padding-left: 10px;
    }

    /* ------------ Section Titles ------------ */
    .section-title {
      font-size: 14px;
      font-weight: 600;
      color: #333;
      margin-bottom: 10px;
      text-transform: uppercase;
      position: relative;
    }
    .section-title::after {
      content: "";
      position: absolute;
      left: 0;
      bottom: -4px;
      width: 30px;
      height: 2px;
      background: #ccc;
    }

    /* ------------ Profile Section ------------ */
    .profile {
      margin-bottom: 30px;
    }
    .profile p {
      font-size: 13px;
      color: #555;
      line-height: 1.6;
    }

    /* ------------ Education Section ------------ */
    .education {
      margin-bottom: 30px;
    }
    /* Increased vertical spacing between education items */
    .edu-item {
      display: flex;
      justify-content: space-between;
      margin-bottom: 16px;
    }
    .edu-left {
      width: 72%;
    }
    .edu-right {
      width: 26%;
      text-align: right;
      font-size: 12px;
      color: #999;
    }
    .edu-institution {
      font-weight: 600;
      font-size: 13px;
      margin-bottom: 2px;
      color: #333;
    }
    .edu-degree {
      font-size: 13px;
      color: #555;
      line-height: 1.4;
    }

    /* ------------ Key Skills Section ------------ */
    .skills {
      margin-bottom: 30px;
    }
    .skill-categories {
      display: flex;
      gap: 20px;
    }
    .skill-category {
      width: 50%;
    }
    .skill-category h4 {
      font-size: 13px;
      font-weight: 600;
      color: #333;
      margin-bottom: 6px;
      text-transform: uppercase;
    }
    .skill-list {
      list-style: none;
      padding-left: 0;
    }
    .skill-list li {
      font-size: 13px;
      color: #555;
      margin-bottom: 4px;
    }

    /* ------------ Employment Section ------------ */
    .employment {
      margin-bottom: 30px;
    }
    /* Increased vertical spacing between employment items */
    .job-item {
      margin-bottom: 25px;
    }
    .job-header {
      display: flex;
      justify-content: space-between;
      align-items: baseline;
      margin-bottom: 4px;
    }
    .job-title {
      font-size: 13px;
      font-weight: 600;
      color: #333;
    }
    .job-location {
      font-size: 12px;
      color: #999;
    }
    .job-dates {
      font-size: 12px;
      color: #999;
      text-align: right;
      margin-bottom: 4px;
    }
    .job-description {
      font-size: 13px;
      color: #555;
      line-height: 1.4;
    }

    /* ------------ Print Fidelity ------------ */
    @media print {
      body {
        -webkit-print-color-adjust: exact;
      }
    }
  </style>
</head>

<body>
  <main class="resume">
    <!-- Header Section -->
    <header class="header">
      <div class="header-left">
        {% if photo_base64 %}
        <div class="photo-container">
          <img src="{{ photo_base64 }}" alt="{{ user.name }} Photo">
        </div>
        {% endif %}
        <div class="name-title">
          <div class="name">{{ user.name }}</div>
          <div class="title">{{ user.title }}</div>
        </div>
      </div>
      <div class="header-right">
        <div class="contact-item">{{ user.location }}</div>
        <div class="contact-item">{{ user.email }}</div>
        <div class="contact-item">{{ user.website }}</div>
        <div class="contact-item">{{ user.phone }}</div>
      </div>
    </header>

    <hr class="divider" />

    <!-- Content Wrapper: Two Columns -->
    <div class="content-wrapper">
      <!-- Left Column: Profile, Education, Key Skills -->
      <section class="left-column">
        <!-- Profile -->
        <div class="profile">
          <h2 class="section-title">Profile</h2>
          <p>{{ user.profile }}</p>
        </div>
        <!-- Education -->
        <div class="education">
          <h2 class="section-title">Education</h2>
          {% for edu in user.education %}
          <div class="edu-item">
            <div class="edu-left">
              <div class="edu-institution">{{ edu.institution }}</div>
              <div class="edu-degree">{{ edu.degree }}</div>
            </div>
            <div class="edu-right">
              {{ edu.start_date }} - {{ edu.end_date }}
            </div>
          </div>
          {% endfor %}
        </div>
        <!-- Key Skills -->
        <div class="skills">
          <h2 class="section-title">Key Skills</h2>
          <div class="skill-categories">
            <div class="skill-category">
              <h4>Professional</h4>
              <ul class="skill-list">
                {% for skill in user.skills.professional %}
                <li>{{ skill }}</li>
                {% endfor %}
              </ul>
            </div>
            <div class="skill-category">
              <h4>Personal</h4>
              <ul class="skill-list">
                {% for skill in user.skills.personal %}
                <li>{{ skill }}</li>
                {% endfor %}
              </ul>
            </div>
          </div>
        </div>
      </section>

      <!-- Right Column: Employment -->
      <section class="right-column">
        <div class="employment">
          <h2 class="section-title">Employment</h2>
          {% for job in user.experience %}
          <div class="job-item">
            <div class="job-header">
              <div class="job-title">{{ job.title }} at {{ job.company }}</div>
              <div class="job-location">{{ job.location }}</div>
            </div>
            <div class="job-dates">{{ job.start_date }} - {{ job.end_date }}</div>
            <div class="job-description">{{ job.description }}</div>
          </div>
          {% endfor %}
        </div>
      </section>
    </div>
  </main>
</body>
</html>
